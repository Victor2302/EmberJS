<h1>Services</h1>
<ul class="list-group">
  <div class="alert alert-info">
    <span>Choisissez les éléments à inclure</span><br>
    {{plural model.countActive "Aucun service selectionné" "service selectionné" "services selectionnés"}}</div>
  {{#each model.services as |service|}}
    <li {{action "toggleActive" service}}
      class="list-group-item {{if service.active 'active' ''}}">
      {{service.name}}<span>{{format-currency service.price symbol='€'}}</span>
    </li>
  {{/each}}

</ul>
<div class="alert alert-info">
  <hr>
  <h2>Total : {{model.sumActive}} €</h2>

  <div class="input-group">
    <span class="input-group-addon">
      <input type="checkbox">
    </span>
    <input type="text" placeholder="Code promo">
  </div>



</div>

